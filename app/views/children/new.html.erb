	$('#pstep1-btn').click(function(e){
	e.preventDefault();
	console.log('text');
	console.log($('#child_create_another').val());
	$('#child_create_another').val('add');
	console.log($('#child_create_another').val());
	$('.child-button').click();
});
</script>